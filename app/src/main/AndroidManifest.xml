<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.mundaco.recipepuppy">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:fullBackupContent="@xml/my_backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.recipe.RecipeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                      android:host="www.mundaco.com"
                      android:pathPrefix="/" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.recipe.RecipeDetailActivity"
                android:parentActivityName="com.mundaco.recipepuppy.ui.recipe.RecipeListActivity" >

        </activity>
    </application>

</manifest>